<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ajitpratapsingh.myappportfolio.MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="#2E3D49"
        android:clickable="true"
        android:onClick="toast1"
        android:text="@string/popular_movies"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:elevation="1dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/button1"
        android:background="#2E3D49"
        android:onClick="toast2"
        android:text="@string/stock_hawk"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:background="#2E3D49"
        android:onClick="toast3"
        android:text="@string/build_it_bigger"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:background="#2E3D49"
        android:onClick="toast4"
        android:text="@string/make_your_app_material"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:background="#2E3D49"
        android:onClick="toast5"
        android:text="@string/go_ubiquitous"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button5"
        android:layout_below="@+id/button5"
        android:background="#2E3D49"
        android:onClick="toast6"
        android:text="@string/capstone1"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/button5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/my_nanodegree_apps"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
